<li class="app-response-container col-lg-12 col-md-12">

  <div class="media col-lg-8 col-md-10">
    <i class="media-left" href="#">
      <img class="user-image" src=<%= response.user.image_url %>>
    </i>
    <div class="media-body">
      <h4 class="media-heading app-user-name"><%= response.user.name %></h4>
      <p><%= response.text %></p>
    </div>
  </div>
  <div class="col-lg-4 col-md-2">
    <small class="pull-right"><%= time_ago_in_words(response.created_at) %></small>
  </div>
  <div class="tags-holder col-lg-12 col-md-12">
    <input  id="response-<%= response.id %>" data-response-id="<%=response.id%>" class="form-control tags autocomplete" type="text" value="<%= response.tags.map{|tag| tag.name}.join(',') %>" />
  </div>
</li>