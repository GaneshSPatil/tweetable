<div class="response-holder col-lg-12 col-md-12">

  <div class="media col-lg-8 col-md-10">
    <a class="media-left" href="#">
      <img class="user-image" src=<%= response.user.image_url %>>
    </a>
    <div class="media-body">
      <h4 class="media-heading user_name"><%= response.user.name %></h4>
      <%= response.text %>
    </div>
  </div>
  <div class="col-lg-4 col-md-2">
    <small class="pull-right"><%= time_ago_in_words(response.created_at) %></small>
  </div>
  <div class="tag-holder col-lg-12 col-md-12">
    <input  id="response-<%= response.id %>" data-response-id="<%=response.id%>" class="form-control tags" type="text" value="<%= response.tags.map{|tag| tag.name}.join(',') %>" />
  </div>
</div>
