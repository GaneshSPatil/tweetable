<%= javascript_include_tag 'bootstrap-duration-picker' %>
<p id="notice"><%= notice %></p>
<div class="container" style="margin-top: 25px">
  <%= bootstrap_form_for(@passage) do |form| %>
      <%= form.text_field :title, :class => "col-10 form-control" %>
      <%= form.text_field :text, :class => "col-10 form-control" %>
      <%= form.text_field :duration, :class => "form-control", :id => "duration", :value => "3600" %>
      <%= form.datetime_local_field :start_time, :class => "col-10 form-control" %>
      <%= form.datetime_local_field :close_time, :class => "col-10 form-control" %>
      <%= form.submit "Save", :class => "btn btn-primary pull-right" %>
  <% end %>
  <%= javascript_tag "$('#duration').durationPicker({showDays: false});" %>
</div>