<div class="tab-pane">
  <div class="row">
    <div class="col-md-12">
      <div class="panel-group" id="panel-982585">

        <% filtered_passages.each do |passage| %>
            <div class="panel panel-default">
              <div class="panel-heading">
                <a class="panel-title" data-toggle="collapse" data-parent="#panel-982585" href="#panel-element-<%= passage.id %>">
                  <div class="row">
                    <div class="col-md-8">
                      <span><%= passage.title %></span>
                    </div>
                    <% if drafts_passage_partial?(partial_name) %>
                        <div class="col-md-1 pull-right">
                          <%= link_to '', edit_passage_path(passage.id), class: 'fa fa-pencil' %>
                          <a class="fa fa-trash" data-toggle="modal" data-target="#delete_modal_<%= passage.id %>"></a>
                          <%= render 'passages/admin/delete_passage', :passage => passage %>
                        </div>
                    <% end %>
                  </div>
                </a>
              </div>
              <div id="panel-element-<%= passage.id %>" class="panel-collapse collapse in">
                <div class="panel-body">
                  <div class="row">
                    <%= render "passages/admin/" + partial_name, :passage => passage %>
                  </div>
                </div>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>