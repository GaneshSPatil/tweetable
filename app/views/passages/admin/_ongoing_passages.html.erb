<div class="thumbnail passage">
	<div class="header">
		<div class="title header_component">
			<%= content_tag(:span, passage.title, class: 'pull-left') %>
		</div>
		<div class="timeline header_component ">
			<%= render :partial => 'passages/admin/duration', locals: {passage: passage} %>
			<%= render :partial => 'passages/admin/commences', locals: {passage: passage} %>
			<%= render :partial => 'passages/admin/concludes', locals: {passage: passage} %>
		</div>
	</div>
	<%= render :partial => 'passages/admin/content', locals: {passage: passage} %>
	<div class="more_options">
			<span>Attempted by: <%= passage.responses.count %> candidates</span>
			<%= content_tag(:a, 'Conclude', href: conclude_passage_path(passage.id), class: 'btn btn-danger pull-right') %>
			<%= content_tag(:a, 'Review', href: passage_responses_path(passage.id), class: 'btn btn-info pull-right') %>
	</div>
</div>