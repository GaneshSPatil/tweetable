
<div class="panel panel-default">
	<div class="panel-heading app-passage-head">
		<div class="passage-header">
			<%= content_tag(:span, passage.title) %>
		</div>
	</div>
	<div class="panel-body">
		<div class="timeline header_component ">
			<%= render :partial => 'passages/admin/concludes', locals: {passage: passage, name: 'Concluded on'} %>
		</div>
		<%= render :partial => 'passages/admin/content', locals: {passage: passage} %>
		<div class="more_options">
			<span>Attempted by: <%= passage.responses.count %> candidates</span>
			<span>Evaluated: <%= evaluation_count(passage.responses) %> responses</span>
			<%= content_tag(:a, 'Review', href: passage_responses_path(passage.id), class: 'btn btn-info pull-right') %>
		</div>
	</div>
</div>