<h3> Users Record</h3>
<div class="container">
  <ul id="user-list">
    <% @users.each do |user| %>
        <li class="row user_details col-lg-12 col-md-12">

          <div class="col-lg-8 col-md-8"><%= image_tag(user.image_url, :class => 'user-circle-icon') %>
            <span><%= user.name %></span>
          </div>

          <%= bootstrap_form_for(user, :url => user_path(user.id), method: :put) do |form| %>
              <%= form.check_box :admin, :class => 'submittable' %>
              <%= form.check_box :active, :class => 'submittable' %>
          <% end %>
        </li>
    <% end %>
  </ul>
</div>