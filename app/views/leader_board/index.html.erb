<div class="container">
  <h2>Leader Board</h2>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Rank</th>
      <th>Name</th>
      <th>Points</th>
    </tr>
    </thead>
    <tbody>

    <% @leader_list.each do |user| %>
        <tr>
          <td><%= user[:rank] %></td>
          <td><img class="user-image" src=<%= user[:image] %>><%= user[:name] %></td>
          <td><%= user[:points] %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>