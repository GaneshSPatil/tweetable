<%= bootstrap_form_for(@tag) do |form| %>
    <%= form.text_field :name, id: :tag_name, class: 'form-control', required: true, maxlength: 25%>
    <%= form.number_field :weight, id: :tag_weight, class: 'form-control' %>
    <%= form.text_field :description, id: :tag_description, class: 'form-control' %>
    <%= form.submit "Save", :class => "btn btn-success padding-bottom" %>
<% end %>