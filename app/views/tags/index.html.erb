<div class="container">
  <h2>Tags</h2>
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Name</th>
      <th>Weight</th>
      <th>Description</th>
      <th>Delete</th>
    </tr>
    </thead>

    <tbody>
    <% @tags.each do |tag| %>
        <tr data-id="<%= tag.id %>">
          <td id='tag-name'><%= editable tag, :name, url: tag_path(tag.id), value: tag.name %></td>
          <td id='tag-weight'><%= editable tag, :weight, url: tag_path(tag.id), value: tag.weight %></td>
          <td id='tag-desc'><%= editable tag, :description, url: tag_path(tag.id), value: tag.description %></td>

          <td><%= link_to '', tag, method: :delete, class: 'fa fa-trash' %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <button type="button" id='add-tag' class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Add Tag</button>

  <div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Add Tag</h4>
        </div>
        <div class="modal-body", id="app-add-tag-modal-body">

        </div>
      </div>
    </div>
  </div>

</div>