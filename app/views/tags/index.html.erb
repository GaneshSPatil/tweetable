<div class="container">
  <h2>Tags</h2>
  <table class="table table-bordered">
    <thead>
    <tr>
      <th>Name</th>
      <th>Weight</th>
      <th>Description</th>
      <th>Color</th>
      <th>Delete</th>
    </tr>
    </thead>

    <tbody>
    <% @tags.each do |tag| %>
        <%= content_tag(:tr, id: "app-tag-#{tag.id}-info") do %>
          <% [ tag.name, tag.weight, tag.description ].each  do | attribute | %>
            <%= content_tag(:td, editable(tag, :name, url: tag_path(tag.id), value: attribute), id: "app-tag-#{tag.id}-#{attribute}") %>
          <% end %>
          <%= content_tag(:td, id: "app-tag-#{tag.id}-color") do %>
            <%= content_tag(:div, class: 'app-tag-color-container input-group colorpicker-component', data:{url:tag_path(tag.id) ,'old-color': tag.color }) do %>
                <%= text_field_tag "app-tag-#{tag.id}-color", tag.color, class: 'form-control hide' %>
                <span class="input-group-addon"><i></i></span>
            <%  end %>
          <%  end %>
          <td>
            <a href="#" class="fa fa-trash" data-toggle="modal" data-target="#app-delete-tag-<%= tag.id %>-modal"></a>
            <%= render :partial => 'tags/delete_tag', locals: {tag: tag, id:"app-delete-tag-#{tag.id}-modal" } %>
          </td>
        <%  end %>
    <% end %>
    </tbody>
  </table>

  <button type="button" id='add-tag' class="btn btn-info btn-lg" data-toggle="modal" data-target="#app-add-tag-modal">Add Tag</button>

  <div id="app-add-tag-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">

      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Add Tag</h4>
        </div>
        <div class="modal-body", id="app-add-tag-modal-body">

        </div>
      </div>
    </div>
  </div>

</div>
