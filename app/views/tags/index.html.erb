<p id="notice"><%= notice %></p>

<h1>Tags</h1>

<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Name</th>
    <th>Weight</th>
    <th>Description</th>
    <th>Delete</th>
  </tr>
  </thead>

  <!--<a href="#" id="username" data-type="text" data-pk="1" data-url="/post" data-title="Enter username">superuser</a>-->

  <tbody>
  <% @tags.each do |tag| %>
      <tr data-id="<%= tag.id %>">
        <td id='tag-name'><%= editable tag, :name, url: tag_path(tag.id), value: tag.name %></td>
        <td id='tag-weight'><%= editable tag, :weight, url: tag_path(tag.id), value: tag.weight %></td>
        <td id='tag-desc'><%= editable tag, :description, url: tag_path(tag.id), value: tag.description %></td>

        <td><%= link_to '', tag, method: :delete, class: 'fa fa-trash' %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tag', new_tag_path %>
